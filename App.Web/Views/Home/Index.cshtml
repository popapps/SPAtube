@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>SPAtube</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Fabrizio Iezzoni">

    <!-- Le styles -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le fav and touch icons -->
</head>

<body>
    <div id="busyindicator"></div>

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#/home">SPAtube</a>
                <form class="navbar-search pull-left" method="GET" action="#/search">
                    <input type="text" class="search-query" name="q" placeholder="Search">
                    <i class="icon-search" style="margin-left: -32px;"></i>
                </form>
                <ul class="nav pull-right">
                    @if (!Request.IsAuthenticated)
                    {
                        
                        <a class="btn btn-primary" href="@Url.Action("Login", "Account")" title="Login">
                            <i class="icon-user icon-white"></i>&nbsp;Login</a>
                        
                    }
                    else
                    {
                        <a class="btn" href="@Url.Action("LogOff", "Account")" title="LogOff">LogOff</a>
                        
                    }
                </ul>

                <!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3">
                @RenderPage("~/Views/Playlists.cshtml")
            </div>
            <div class="span9">
                @RenderPage("~/Views/Playlist.cshtml")
                @RenderPage("~/Views/Video.cshtml")

            </div>
        </div>

    </div>
    <!-- /container -->

    <!-- Javascript, Placed at the end of the document so the pages load faster -->
    <script src="//www.youtube.com/iframe_api"></script>
    @Scripts.Render(
        "~/bundles/jquery",
        "~/bundles/lib",
        "~/Scripts/lib/require.js",
        "~/bundles/app",
        "~/Scripts/main.js"
        )

</body>
</html>
